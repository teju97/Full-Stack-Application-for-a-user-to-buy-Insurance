@model List<InsuranceProject.Models.CustomerViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Student Profile -->
<div class="page-container">
    <div class="blank">
        <h1 class="title">Customers list</h1>
        <img src="@Url.Content("~/Content/Images/login.jpg")" alt="Image">
    </div>
    <p class="container-message">
        Check out all the customers from the list
    </p>
    <div class="col-lg-12">
        <div class="card shadow-sm">
            <div class="card-header bg-transparent border-0">
                <h3 class="mb-0"><i class="far fa-clone pr-1"></i>Users</h3>
            </div>
            <div class="card-body pt-0">
                <table class="table table-bordered">
                    <tr>
                        <th>First name</th>
                        <th>Last name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Gender</th>
                        <th>Marital Status</th>
                        <th>Type</th>
                        <th>Role</th>
                        <th>Delete</th>
                    </tr>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td><a href="/Account/Profile/@c.Id">@c.FirstName</a></td>
                            <td>@c.LastName</td>
                            <td>@c.Email</td>
                            <td>@c.Address</td>
                            <td>@c.Gender</td>
                            <td>@c.Marital_Status</td>
                            <td>@c.Type</td>
                            <td>Customer</td>
                            <td>@Html.ActionLink("Delete", "DeleteUser", "Admin", new { id = c.Id }, new { @class = "btn btn-danger" })</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /Student Profile -->
