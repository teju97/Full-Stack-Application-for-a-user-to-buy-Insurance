@model InsuranceProject.Models.ProfileViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-container">
    <div class="blank">
        <h1 class="title">Profile</h1>
        <img src="@Url.Content("~/Content/Images/login.jpg")" alt="Image">
    </div>
    <p class="container-message">
        User profile page!
    </p>
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-transparent border-0">
                <h3 class="mb-0"><i class="far fa-clone pr-1"></i>User Information</h3>
            </div>
            <div class="card-body pt-0">
                <table class="table table-bordered">
                    <tr>
                        <th width="30%">Account type: </th>
                        <td width="2%">:</td>
                        <td>@Model.AccountType</td>
                    </tr>
                    <tr>
                        <th width="30%">First Name: </th>
                        <td width="2%">:</td>
                        <td>@Model.FirstName</td>
                    </tr>
                    <tr>
                        <th width="30%">Last Name:</th>
                        <td width="2%">:</td>
                        <td>@Model.LastName</td>
                    </tr>
                    <tr>
                        <th width="30%">Address</th>
                        <td width="2%">:</td>
                        <td>@Model.Address</td>
                    </tr>
                    <tr>
                        <th width="30%">Email</th>
                        <td width="2%">:</td>
                        <td>@Model.Email</td>
                    </tr>
                    @if (Model.Gender != null)
                    {
                        <tr>
                            <th width="30%">Gender: </th>
                            <td width="2%">:</td>
                            <td>@Model.Gender</td>
                        </tr>
                    }
                    @if (Model.Marital_Status != null)
                    {
                        <tr>
                            <th width="30%">Marital Status: </th>
                            <td width="2%">:</td>
                            <td>Married</td>
                        </tr>
                    }
                    @if (Model.Type == null)
                    {
                        <tr>
                            <th width="30%">Type of Customer: </th>
                            <td width="2%">:</td>
                            <td>-</td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <th width="30%">Type of Customer: </th>
                            <td width="2%">:</td>
                            <td>@Model.Type</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
    <div class="col-lg-12" style="margin-top:50px;">
        <div class="card shadow-sm">
            <div class="card-header bg-transparent border-0">
                <h3 class="mb-0"><i class="far fa-clone pr-1"></i>Insurances</h3>
            </div>
            <div class="card-body pt-0">
                <table class="table table-bordered">
                    <tr>
                        <th>Insurance Number</th>
                        <th>Insurance Type</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Status</th>
                    </tr>
                    @foreach (var i in Model.pivm)
                    {
                        <tr>
                            <td>
                                @if (i.InsuranceType == "Car Insurance")
                                {
                                    <a href="/Insurance/DetailedCarInsuranceView/@i.InsuranceNumber">@i.InsuranceNumber</a>
                                }
                                else
                                {
                                    <a href="/Insurance/DetailedHomeInsurance/@i.InsuranceNumber">@i.InsuranceNumber</a>
                                }
                            </td>
                            <td>@i.InsuranceType</td>
                            <td>@i.StartDate</td>
                            <td>@i.EndDate</td>
                            <td>@i.Status</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
