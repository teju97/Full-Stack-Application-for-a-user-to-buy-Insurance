@model InsuranceProject.Models.ProfileViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-container">
    <div class="blank">
        <h1 class="title">Profile</h1>
        <img src="@Url.Content("~/Content/Images/login.jpg")" alt="Image">
    </div>
    <p class="container-message">
        Admin profile page!
    </p>
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-transparent border-0">
                <h3 class="mb-0"><i class="far fa-clone pr-1"></i>User Information</h3>
            </div>
            <div class="card-body pt-0">
                <table class="table table-bordered">
                    <tr>
                        <th width="30%">Account type: </th>
                        <td width="2%">:</td>
                        <td>@Model.AccountType</td>
                    </tr>
                    <tr>
                        <th width="30%">First Name: </th>
                        <td width="2%">:</td>
                        <td>@Model.FirstName</td>
                    </tr>
                    <tr>
                        <th width="30%">Last Name:</th>
                        <td width="2%">:</td>
                        <td>@Model.LastName</td>
                    </tr>
                    <tr>
                        <th width="30%">Address</th>
                        <td width="2%">:</td>
                        <td>@Model.Address</td>
                    </tr>
                    <tr>
                        <th width="30%">Email</th>
                        <td width="2%">:</td>
                        <td>@Model.Email</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
